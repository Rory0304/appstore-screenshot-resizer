{
    "singleQuote": true,
    "semi": true,
    "useTabs": false,
    "tabWidth": 4,
    "trailingComma": "all",
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrder": [
        "^react(.*)",
        "^next(.*)",
        "^[./]",
        "<THIRD_PARTY_MODULES>",
        "/css$/"
    ],
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
